---
import { IoSearch } from "react-icons/io5";

import logoImage from "@assets/astrocloudlogo.png";
import logoBg from "@assets/logoBg.png";
---
<header class="border-b border-border-3 bg-component-9 h-10  sm:h-14 px-3 sticky top-0   mx-auto flex items-center gap-4 justify-between z-50 max-w-full">
    <a href="/" class="block max-w-[355px] z-10 my-3 lg:my-6 hover:opacity-100">
             <img
            src={logoImage.src}
            alt="AstroCloud logo"
            class="w-[100%] h-6 sm:h-10 -mt-[6px]"
        />
    </a>
        <img 
        src={logoBg.src}
        alt="logo background"
        class="absolute object-cover w-[55%] lg:w-[40%] left-0 h-full object-right"
        />
    <div class="flex items-center gap-4">
    <div class="text-xl lg:text-2xl font-bold text-text-6/80">
        <!-- navbar toggler -->
   <div class="flex">
    <div class="flex sm:hidden  ml-auto  items-center  lg:ml-0">
        <a
          class="mr-4 inline-block border-border text-xl text-white "
          href="/search"
          aria-label="search"
        >
          <IoSearch />
        </a>
      </div>
    <input id="nav-toggle" type="checkbox" class="hidden" />
   <label
     for="nav-toggle"
     class=" cursor-pointer flex items-center sm:hidden text-white"
   >
     <svg id="show-button" class="h-6 fill-current block" viewBox="0 0 20 20">
       <title>Menu Open</title>
       <path d="M0 3h20v2H0V3z m0 6h20v2H0V9z m0 6h20v2H0V0z"></path>
     </svg>
     <svg id="hide-button" class="h-6 fill-current hidden" viewBox="0 0 20 20">
       <title>Menu Close</title>
       <polygon
         points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2"
         transform="rotate(45 10 10)"></polygon>
     </svg>
   </label>
     <ul
     id="nav-menu"
     class="absolute top-10 left-0 sm:px-2   bg-component-9 sm:bg-transparent  sm:static text-center lg:text-left order-3 hidden w-full md:order-1 sm:flex sm:w-auto sm:space-x-2 sm:pb-0 lg:space-x-4"
   >
         <li class="">
           <a
             href="/"
             class={`block  font-poppins font-semibold text-white transition p-2 sm:p-0 lg:px-2  `}
           >
              Home
           </a>
         </li>
         <hr class="sm:hidden"/>
         <li class="">
          <a
            href="/docs"
            class={`block  font-poppins font-semibold text-white transition p-2 sm:p-0 lg:px-2`}
          >
             Docs
          </a>
        </li>
   </ul>
   </div>
</div>

<div class="hidden  ml-auto sm:flex items-center  lg:ml-0">
    <a
      class="mr-4 inline-block border-border text-xl text-white "
      href="/search"
      aria-label="search"
    >
      <IoSearch />
    </a>
  </div>
   
</div>


</header>