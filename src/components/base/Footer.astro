---
// Import assets
import AstroCloudLogo from '../../assets/astrocloudlogo.png';
import { FaPhoneAlt } from "react-icons/fa";
import { FaLocationDot } from "react-icons/fa6";
import { MdEmail } from "react-icons/md";
import { RiArrowDropDownLine } from 'react-icons/ri'; // optional if you still want React Icons (see note below)
---
<div class="w-full bg-component-7/80 pt-6 pb-8">
  <img
    src={AstroCloudLogo.src}
    alt="AstroCloud logo"
    class=" h-6 sm:h-10 mb-6 max-w-[355px]"
  />
  <hr class="border-t border-white w-full mb-[25px]" />

  <div class="container py-2 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 sm:grid-rows-2 lg:grid-rows-1 xl:grid-cols-4 lg:gap-0 text-text-6 justify-between mb-8">
    
    <!-- Reach Us -->
    <div class="flex flex-col items-start mb-3 sm:hidden">
      <details class="w-full">
        <summary class="flex justify-between items-center font-semibold mb-2 text-lg cursor-pointer">
            <p class="font-bold text-base">Reach Us</p>
          <span class="block sm:hidden text-4xl">
            <RiArrowDropDownLine />
          </span>
        </summary>
        <div class="flex flex-col justify-between flex-1 gap-2 mb-2">
          <div class="flex gap-3 lg:gap-5 items-center">
            <FaPhoneAlt className="text-sm lg:text-lg m-0 text-text-6" />
            <p>+1012 3456 789</p>
          </div>
          <div class="flex gap-3 lg:gap-5 items-center">
            <MdEmail className="text-sm lg:text-lg m-0 text-text-6" />
            <p>Astrocloud@gmail.com</p>
          </div>
          <div class="flex gap-3 lg:gap-5 items-center">
            <FaLocationDot className="text-sm lg:text-lg m-0 text-text-6" />
            <p>Obour city, Cairo, EGY</p>
          </div>
        </div>
      </details>
    </div>

    <!-- Company -->
    <div class="flex flex-col mb-3 sm:hidden">
      <details class="w-full">
        <summary class="flex justify-between items-center font-semibold mb-2 text-lg cursor-pointer">
          <p class="font-bold text-base">Company</p>
          <span class="block sm:hidden text-4xl">
            <RiArrowDropDownLine />
          </span>
        </summary>
        <div class="flex flex-col justify-between flex-1 gap-2">
          <p><a href="#">About</a></p>
          <p><a href="#">Contact</a></p>
          <p><a href="#">Blogs</a></p>
        </div>
      </details>
    </div>

    <!-- Legal -->
    <div class="flex flex-col mb-3 sm:hidden">
      <details class="w-full">
        <summary class="flex justify-between items-center font-semibold mb-2 text-lg cursor-pointer">
          <p class="font-bold text-base">Legal</p>
          <span class="block sm:hidden text-4xl">
            <RiArrowDropDownLine />
          </span>
        </summary>
        <div class="flex flex-col justify-between flex-1 gap-2">
          <p><a href="#">Privacy Policy</a></p>
          <p><a href="#">Terms & Services</a></p>
          <p><a href="#">Terms of Use</a></p>
        </div>
      </details>
    </div>
    <!-- Reach Us -->
    <div class="hidden sm:flex flex-col items-start mb-3">
            <p class="font-bold mb-4">Reach Us</p>
            <span class="block sm:hidden text-4xl">
              <RiArrowDropDownLine />
            </span>
          <div class="flex flex-col justify-between flex-1 gap-2 mb-2">
            <div class="flex gap-3 lg:gap-5 items-center">
              <FaPhoneAlt className="text-sm lg:text-lg m-0 text-text-6" />
              <p>+1012 3456 789</p>
            </div>
            <div class="flex gap-3 lg:gap-5 items-center">
              <MdEmail className="text-sm lg:text-lg m-0 text-text-6" />
              <p>Astrocloud@gmail.com</p>
            </div>
            <div class="flex gap-3 lg:gap-5 items-center">
              <FaLocationDot className="text-sm lg:text-lg m-0 text-text-6" />
              <p>Obour city, Cairo, EGY</p>
            </div>
          </div>
      </div>
  
      <!-- Company -->
      <div class="hidden sm:flex flex-col mb-3 ">
          <p class="font-bold mb-4">Company</p>
            <span class="block sm:hidden text-4xl">
              <RiArrowDropDownLine />
            </span>

          <div class="flex flex-col justify-between flex-1 gap-2">
            <p><a href="#">About</a></p>
            <p><a href="#">Contact</a></p>
            <p><a href="#">Blogs</a></p>
          </div>

      </div>
  
      <!-- Legal -->
      <div class="hidden sm:flex flex-col mb-3">
            <p class="font-bold mb-4">Legal</p>
            <span class="block sm:hidden text-4xl">
              <RiArrowDropDownLine />
            </span>
          <div class="flex flex-col justify-between flex-1 gap-2">
            <p><a href="#">Privacy Policy</a></p>
            <p><a href="#">Terms & Services</a></p>
            <p><a href="#">Terms of Use</a></p>
          </div>
      </div>


    <!-- Join Us -->
    <div>
      <p class="font-bold mb-[15px] xl:mb-[50px] text-base">Join Us</p>
      <div class="flex mb-[15px] lg:mb-[25px]">
        <input
          type="text"
          placeholder="Your email address"
          class="w-[60%] max-w-[200px] h-[50px] rounded-tl-[4px] rounded-bl-[4px] bg-[#1E1E1E] text-text-6 px-3 outline-none"
        />
        <button
          class="w-[40%] max-w-[150px] h-[50px] bg-button-4 text-text-6 font-medium text-[12px] rounded-tr-[4px] rounded-br-[4px]"
        >
          Subscribe
        </button>
      </div>
      <p class="font-medium text-[13px] opacity-50">
        * Will send you weekly updates.
      </p>
    </div>

  </div>
</div>
