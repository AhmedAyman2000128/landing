---
const {num , title , description , image , animatedImg} = Astro.props;
---
<!-- mb-5 lg:mb-6 xl:mb-16 -->
<div class="flex flex-col gap-16 bg-component-1/65 p-6 rounded-xl lg:rounded-2xl 2xl:rounded-[20px] items-center  w-full sm:w-[350px] lg:w-[450px] h-full  scroll-element-up">
    <div class="flex flex-col items-center text-3xl  xl:text-4xl 2xl:text-[40px] gap-4 ">
        <span class="text-5xl xl:text-6xl 2xl:text-7xl">{num}</span>
        <h3 class="font-dela tracking-wide">{title.toUpperCase()}</h3>
        <p class="font-poppins text-xl xl:text-2xl 2xl:text-2xl">{description}</p>
    </div>
    <div class="relative">
        <img src={image.src} alt="repoCard" class="rounded-[20px]" />
        {animatedImg && (
            <>
                <img src={animatedImg.src} alt="" class="absolute top-0 right-0  w-52" />
                <p class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 font-poppins font-extrabold text-xl sm:text-3xl">
                    Congratulations
                </p>
            </>
        )}
    </div>
</div>